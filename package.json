{
  "name": "repo-manager",
  "version": "1.0.0",
  "description": "WordPress Repo Manager Plugin - SCSS Build Pipeline",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "npm run build:admin && npm run build:fw && npm run build:status",
    "build:admin": "sass src/Assets/scss/admin.scss:dist/css/admin.css --style=compressed --source-map",
    "build:fw": "sass src/Assets/scss/floating-widget.scss:dist/css/floating-widget.css --style=compressed --source-map",
    "build:status": "sass src/Assets/scss/status.scss:dist/css/status.css --style=compressed --source-map",
    "build:js": "webpack --mode=production",
    "dev": "npm run dev:css & npm run dev:js",
    "dev:css": "sass src/Assets/scss/admin.scss:dist/css/admin.css --watch --source-map",
    "dev:js": "webpack --mode=development --watch",
    "clean": "rimraf dist/",
    "install-deps": "npm install"
  },
  "devDependencies": {
    "sass": "^1.69.5",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "css-loader": "^6.8.1",
    "style-loader": "^3.3.3",
    "mini-css-extract-plugin": "^2.7.6",
    "postcss": "^8.4.32",
    "postcss-loader": "^7.3.3",
    "autoprefixer": "^10.4.16",
    "rimraf": "^5.0.5"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
